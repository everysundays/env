<div class="min-h-screen bg-base-200">
  <!-- Header -->
  <div class="bg-base-100 shadow-sm border-b border-base-300">
    <div class="container mx-auto px-4 py-6">
      <h1 class="text-4xl font-bold text-base-content">DaisyUI Components</h1>
      <p class="text-base-content/70 mt-2">Essential DaisyUI component showcase</p>
    </div>
  </div>

  <div class="container mx-auto px-4 py-8">
    <div class="grid gap-6 pb-20 md:grid-cols-2 lg:grid-cols-3">

      <!-- Cards & Content -->
      <div class="space-y-6">
        <!-- Basic Card -->
        <div class="card bg-base-100 shadow-xl">
          <div class="card-body">
            <h2 class="card-title">Card Title</h2>
            <p>Basic card with content and actions.</p>
            <div class="card-actions justify-end">
              <button class="btn btn-primary">Action</button>
            </div>
          </div>
        </div>

        <!-- Card with Image -->
        <div class="card bg-base-100 shadow-xl">
          <figure><img src="https://img.daisyui.com/images/stock/photo-1606107557195-0e29a4b5b4aa.webp" alt="Shoes" /></figure>
          <div class="card-body">
            <h2 class="card-title">Nike Shoes <div class="badge badge-success">SALE</div></h2>
            <div class="rating rating-sm">
              <input type="radio" name="rating-1" class="mask mask-star-2 bg-orange-400" />
              <input type="radio" name="rating-1" class="mask mask-star-2 bg-orange-400" />
              <input type="radio" name="rating-1" class="mask mask-star-2 bg-orange-400" />
              <input type="radio" name="rating-1" class="mask mask-star-2 bg-orange-400" />
              <input type="radio" name="rating-1" class="mask mask-star-2 bg-orange-400" checked />
            </div>
            <div class="flex items-center justify-between">
              <span class="text-2xl font-bold">$120</span>
              <span class="text-sm line-through opacity-60">$150</span>
            </div>
          </div>
        </div>

        <!-- Alerts -->
        <div class="space-y-4">
          <div class="alert alert-info">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="m11.25 11.25.041-.02a.75.75 0 0 1 1.063.852l-.708 2.836a.75.75 0 0 0 1.063.853l.041-.021M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9-3.75h.008v.008H12V8.25Z" />
            </svg>
            <span>New message received</span>
          </div>
          <div class="alert alert-success">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
            </svg>
            <span>Task completed successfully</span>
          </div>
          <div class="alert alert-warning">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126ZM12 15.75h.007v.008H12v-.008Z" />
            </svg>
            <span>Action required</span>
          </div>
          <div class="alert alert-error">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9 3.75h.008v.008H12v-.008Z" />
            </svg>
            <span>Error occurred</span>
          </div>
        </div>
      </div>

      <!-- Forms & Inputs -->
      <div class="space-y-6">
        <!-- Form Card -->
        <div class="card bg-base-100 shadow-xl">
          <div class="card-body">
            <h2 class="card-title">User Registration</h2>
            <div class="form-control">
              <label class="label">
                <span class="label-text">Username</span>
              </label>
              <input type="text" placeholder="Enter username" class="input input-bordered" />
            </div>
            <div class="form-control">
              <label class="label">
                <span class="label-text">Email</span>
              </label>
              <input type="email" placeholder="Enter email" class="input input-bordered" />
            </div>
            <div class="form-control">
              <label class="label">
                <span class="label-text">Password</span>
              </label>
              <input type="password" placeholder="Enter password" class="input input-bordered" />
            </div>
            <div class="form-control">
              <label class="label cursor-pointer">
                <span class="label-text">Subscribe to newsletter</span>
                <input type="checkbox" class="toggle toggle-primary" />
              </label>
            </div>
            <div class="form-control mt-6">
              <button class="btn btn-primary">Register</button>
            </div>
          </div>
        </div>

        <!-- Search & Join -->
        <div class="card bg-base-100 shadow-xl">
          <div class="card-body">
            <div class="join">
              <input class="input input-bordered join-item" placeholder="Search..." />
              <button class="btn btn-neutral join-item">Search</button>
            </div>
          </div>
        </div>

        <!-- Select & Range -->
        <div class="card bg-base-100 shadow-xl">
          <div class="card-body space-y-4">
            <div class="form-control">
              <label class="label">
                <span class="label-text">Choose option</span>
              </label>
              <select class="select select-bordered">
                <option disabled selected>Pick one</option>
                <option>Option 1</option>
                <option>Option 2</option>
                <option>Option 3</option>
              </select>
            </div>
            <div class="form-control">
              <label class="label">
                <span class="label-text">Price range: $50</span>
              </label>
              <input type="range" min="0" max="100" value="50" class="range range-primary" />
            </div>
            <textarea class="textarea textarea-bordered" placeholder="Your message"></textarea>
          </div>
        </div>

        <!-- Progress & Loading -->
        <div class="card bg-base-100 shadow-xl">
          <div class="card-body space-y-4">
            <h3 class="font-bold">Progress & Loading</h3>
            <progress class="progress progress-primary" value="40" max="100"></progress>
            <progress class="progress progress-secondary" value="70" max="100"></progress>
            <div class="flex justify-center">
              <span class="loading loading-spinner loading-lg"></span>
            </div>
          </div>
        </div>
      </div>

      <!-- Navigation & Data -->
      <div class="space-y-6">
        <!-- Tabs -->
        <div class="card bg-base-100 shadow-xl">
          <div class="card-body">
            <div role="tablist" class="tabs tabs-lifted">
              <input type="radio" name="tabs" role="tab" class="tab" aria-label="Tab 1" />
              <div role="tabpanel" class="tab-content bg-base-100 border-base-300 rounded-box p-6">
                Tab content 1
              </div>
              <input type="radio" name="tabs" role="tab" class="tab" aria-label="Tab 2" checked />
              <div role="tabpanel" class="tab-content bg-base-100 border-base-300 rounded-box p-6">
                Tab content 2
              </div>
              <input type="radio" name="tabs" role="tab" class="tab" aria-label="Tab 3" />
              <div role="tabpanel" class="tab-content bg-base-100 border-base-300 rounded-box p-6">
                Tab content 3
              </div>
            </div>
          </div>
        </div>

        <!-- Menu -->
        <div class="card bg-base-100 shadow-xl">
          <ul class="menu p-4">
            <li class="menu-title">Navigation</li>
            <li><a><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5"><path stroke-linecap="round" stroke-linejoin="round" d="m2.25 12 8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" /></svg>Dashboard</a></li>
            <li><a><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5"><path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" /></svg>Users</a></li>
            <li><a><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5"><path stroke-linecap="round" stroke-linejoin="round" d="M9.594 3.94c.09-.542.56-.94 1.11-.94h2.593c.55 0 1.02.398 1.11.94l.213 1.281c.063.374.313.686.645.87.074.04.147.083.22.127.325.196.72.257 1.075.124l1.217-.456a1.125 1.125 0 0 1 1.37.49l1.296 2.247a1.125 1.125 0 0 1-.26 1.431l-1.003.827c-.293.241-.438.613-.43.992a7.723 7.723 0 0 1 0 .255c-.008.378.137.75.43.991l1.004.827c.424.35.534.955.26 1.43l-1.298 2.247a1.125 1.125 0 0 1-1.369.491l-1.217-.456c-.355-.133-.75-.072-1.076.124a6.47 6.47 0 0 1-.22.128c-.331.183-.581.495-.644.869l-.213 1.281c-.09.543-.56.94-1.11.94h-2.594c-.55 0-1.019-.398-1.11-.94l-.213-1.281c-.062-.374-.312-.686-.644-.87a6.52 6.52 0 0 1-.22-.127c-.325-.196-.72-.257-1.076-.124l-1.217.456a1.125 1.125 0 0 1-1.369-.49l-1.297-2.247a1.125 1.125 0 0 1 .26-1.431l1.004-.827c.292-.24.437-.613.43-.991a6.932 6.932 0 0 1 0-.255c.007-.38-.138-.751-.43-.992l-1.004-.827a1.125 1.125 0 0 1-.26-1.43l1.297-2.247a1.125 1.125 0 0 1 1.37-.491l1.216.456c.356.133.751.072 1.076-.124.072-.044.146-.086.22-.128.332-.183.582-.495.644-.869l.214-1.28Z" /><path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" /></svg>Settings</a></li>
          </ul>
        </div>

        <!-- Stats -->
        <div class="stats shadow">
          <div class="stat">
            <div class="stat-figure text-primary">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-8">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
              </svg>
            </div>
            <div class="stat-title">Users</div>
            <div class="stat-value">31K</div>
            <div class="stat-desc">Jan 1st - Feb 1st</div>
          </div>
          <div class="stat">
            <div class="stat-figure text-secondary">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-8">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 18 9 11.25l4.306 4.306a11.95 11.95 0 0 1 5.814-5.518l2.74-1.22m0 0-5.94-2.281m5.94 2.28-2.28 5.941" />
              </svg>
            </div>
            <div class="stat-title">Revenue</div>
            <div class="stat-value">$12.4K</div>
            <div class="stat-desc">↗︎ 400 (22%)</div>
          </div>
        </div>

        <!-- Chat -->
        <div class="card bg-base-100 shadow-xl">
          <div class="card-body">
            <div class="chat chat-start">
              <div class="chat-image avatar">
                <div class="w-10 rounded-full">
                  <img alt="Avatar" src="https://img.daisyui.com/images/stock/photo-1534528741775-53994a69daeb.webp" />
                </div>
              </div>
              <div class="chat-header">
                Obi-Wan Kenobi
                <time class="text-xs opacity-50">12:45</time>
              </div>
              <div class="chat-bubble">You were the Chosen One!</div>
            </div>
            <div class="chat chat-end">
              <div class="chat-image avatar">
                <div class="w-10 rounded-full">
                  <img alt="Avatar" src="https://img.daisyui.com/images/stock/photo-1535713875002-d1d0cf227877.webp" />
                </div>
              </div>
              <div class="chat-header">
                Anakin
                <time class="text-xs opacity-50">12:46</time>
              </div>
              <div class="chat-bubble">I hate you!</div>
            </div>
          </div>
        </div>

        <!-- Timeline -->
        <ul class="timeline timeline-compact">
          <li>
            <div class="timeline-middle">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="text-primary h-5 w-5">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <div class="timeline-end timeline-box">Project Started</div>
            <hr class="bg-primary">
          </li>
          <li>
            <hr class="bg-primary">
            <div class="timeline-middle">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="text-primary h-5 w-5">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <div class="timeline-end timeline-box">Development Complete</div>
            <hr>
          </li>
          <li>
            <hr>
            <div class="timeline-middle">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="h-5 w-5">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <div class="timeline-end timeline-box">Deployment</div>
          </li>
        </ul>

        <!-- Mockup -->
        <div class="mockup-code">
          <pre data-prefix="$"><code>npm install daisyui</code></pre>
          <pre data-prefix=">"><code>installing...</code></pre>
          <pre data-prefix=">"><code>Done!</code></pre>
        </div>
      </div>

    </div>
  </div>
</div>