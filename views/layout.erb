<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= @page_title ? "#{@page_title} · Sinatra Template" : "Sinatra Template" %></title>
    <link rel="stylesheet" href="/css/app.css" />
  </head>
  <body class="bg-white">
    <header class="border-b">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="flex h-16 items-center justify-between">
          <a href="/" class="text-lg font-semibold tracking-tight text-gray-900">YourBrand</a>
          <nav class="flex items-center gap-6">
            <a href="/" class="text-sm font-medium <%= active_class('/') %>">Home</a>
          </nav>
        </div>
      </div>
    </header>

    <main>
      <%= yield %>
    </main>

    <footer class="mt-24 border-t">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-8 text-sm text-gray-500">
        © <%= Time.now.year %> YourBrand
      </div>
    </footer>
  </body>
  </html>



